{% extends 'blog/base.html' %}

{% block content %}
{% for post in posts %}
                <div class="post">
                    <div class="date">
                    </div>
                    <div>
                    <h1 style="text-align:left;"><a href="{% url 'blog.views.post_detail' pk=post.pk %}">{{ post.title }}</a></h1>
                    <p><img class="img-rounded" src="{{post.photo.url}}" alt=""/></a></p> 
                    <p>{{ post.text|linebreaks }}</p>
